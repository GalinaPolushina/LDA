<Window x:Class="LDAssistant.View.Project"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LDAssistant.View"
        mc:Ignorable="d"
        Title="Project" Height="450" Width="800">

    <Grid>

        <DataGrid ItemsSource="{Binding ProjectSource}" SelectedItem="{Binding SelectedProject}" AutoGenerateColumns="false" HorizontalAlignment="Left" Height="419" Margin="107,0,0,0" VerticalAlignment="Top" Width="497">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Project.Project_Name}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить" Command="{Binding Path=CreateProject}" HorizontalAlignment="Left" Margin="683,168,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
