<Window x:Class="LDAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LDAssistant"
        xmlns:viewmodels="clr-namespace:LDAssistant.ViewModel"
        mc:Ignorable="d"
        Title="Landscape Designer Assistant" Height="600" Width="800">

    <Grid>
        <DataGrid ItemsSource="{Binding PlantingSource}" AutoGenerateColumns="false" HorizontalAlignment="Left" Height="496" Margin="226,10,0,0" VerticalAlignment="Top" Width="558">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Растение" Binding="{Binding Plant.Plant_Name}" />
            </DataGrid.Columns>            
        </DataGrid>

        <DataGrid ItemsSource="{Binding PlantSource}" AutoGenerateColumns="false" HorizontalAlignment="Left" Height="496" Margin="10,10,0,0" VerticalAlignment="Top" Width="211">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Plant_Name}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
